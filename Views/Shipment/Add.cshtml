@model Courier_Management_System.Models.AddShipmentViewModel

@{
    ViewData["Title"] = "Shipment Informtaions";
   
}
 
<div class="text-center">
    <h1 class="display-4">Shipment Information</h1>
    <small style="opacity:0.6">Courier Management System [Developed by piistech]</small>
    <hr />
</div>


<form method="post" asp-controller="Shipment" asp-action="Add">
    <div class="col">
        <label for="labelShipperName">Shipper Name</label>
        <input type="text" class="form-control" asp-for="ShipperName" placeholder="Rakibul Islam">
        <label for="labelShipperAddress">Shipper Address</label>
        <input type="text" class="form-control" asp-for="ShipperAddress" placeholder="Uttara">
        <label for="labelShipperEmail">Shipper Email</label>
        <input type="text" class="form-control" asp-for="ShipperEmail" placeholder="example@gmail.com">
        <br />
        <hr />

        <label for="labelReceiverName">Receiver Name</label>
        <input type="text" class="form-control" asp-for="ReceiverName" placeholder="Rakibul Islam">
        <label for="labelReceiverAddress">Receiver Address</label>
        <input type="text" class="form-control" asp-for="ReceiverAddress" placeholder="Uttara">
        <label for="labelReceiverEmail">Receiver Email</label>
        <input type="text" class="form-control" asp-for="ReceiverEmail" placeholder="example@gmail.com">

        <label for="labelShipmentStatus">Shipment Status</label>
        <input type="text" class="form-control" asp-for="ShipmentStatus" placeholder="Delivered">
        <br />
        <button type="submit" class="btn btn-primary">Add New Shipment</button>
    </div>
</form>
