}

@model Courier_Management_System.Models.AdminLoginModel

<h2>Admin Login</h2>

<form asp-controller="Admin" asp-action="Login" method="post">
    <div class="form-group">
        <label for="adminEmail">Email</label>
        <input type="email" asp-for="AdminEmail" class="form-control" id="adminEmail" name="AdminEmail" required>
    </div>
    <div class="form-group">
        <label for="AdminPassword">Password</label>
        <input type="password" asp-for="AdminPassword" class="form-control" id="AdminPassword" name="AdminPassword" required>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
